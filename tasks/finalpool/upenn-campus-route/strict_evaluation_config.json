{
  "evaluation_modes": {
    "strict": {
      "description": "严格模式 - 要求高质量路线规划",
      "primary_threshold": 1.1,
      "fallback_threshold": 1.15,
      "min_locations_required": 5,
      "route_validation": {
        "check_starting_point": true,
        "validate_location_names": true,
        "require_all_destinations": true,
        "allow_partial_matches": false
      },
      "performance_limits": {
        "max_evaluation_time": 30.0,
        "max_api_calls": 50
      }
    },
    "standard": {
      "description": "标准模式 - 平衡质量和实用性",
      "primary_threshold": 1.15,
      "fallback_threshold": 1.2,
      "min_locations_required": 4,
      "route_validation": {
        "check_starting_point": true,
        "validate_location_names": true,
        "require_all_destinations": true,
        "allow_partial_matches": true
      },
      "performance_limits": {
        "max_evaluation_time": 60.0,
        "max_api_calls": 100
      }
    },
    "lenient": {
      "description": "宽松模式 - 用于初期测试和调试",
      "primary_threshold": 1.25,
      "fallback_threshold": 1.3,
      "min_locations_required": 3,
      "route_validation": {
        "check_starting_point": true,
        "validate_location_names": false,
        "require_all_destinations": false,
        "allow_partial_matches": true
      },
      "performance_limits": {
        "max_evaluation_time": 120.0,
        "max_api_calls": 200
      }
    }
  },
  "scoring_weights": {
    "route_efficiency": 0.6,
    "location_coverage": 0.2,
    "json_structure": 0.1,
    "execution_quality": 0.1
  },
  "quality_metrics": {
    "excellent": {
      "min_score": 0.95,
      "efficiency_threshold": 1.05
    },
    "good": {
      "min_score": 0.85,
      "efficiency_threshold": 1.15
    },
    "acceptable": {
      "min_score": 0.7,
      "efficiency_threshold": 1.25
    },
    "poor": {
      "min_score": 0.5,
      "efficiency_threshold": 1.4
    }
  },
  "additional_checks": {
    "validate_distances": true,
    "check_route_feasibility": true,
    "verify_time_estimates": true,
    "detect_circular_routes": true,
    "validate_walking_mode": true
  }
}